@model StoreIdent.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<section class="contact-img-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="con-text">
                    <h2 class="page-title">Register</h2>
                    <p><a href="/Home/Main">Home</a> | Register</p>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="login-area">
    <div class="container">
        <div class="row">


            <div class="col-md-6 col-xs-12">
                <div class="tb-login-form ">
                    <h5 class="tb-title">Register</h5>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <p class="checkout-coupon top log a-an">
                            <label class="l-contact">
                                Email Address
                                <em>*</em>
                            </label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                        </p>
                        <p class="checkout-coupon top log a-an">
                            <label class="l-contact">
                                Name
                                <em>*</em>
                            </label>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

                        </p>
                        <p class="checkout-coupon top log a-an">
                            <label class="l-contact">
                                Password
                                <em>*</em>
                            </label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

                        </p>
                        <p class="checkout-coupon top log a-an">
                            <label class="l-contact">
                                ConfirmPassword
                                <em>*</em>
                            </label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })

                        </p>
                        <p class="login-submit5 ress">
                            <input class="button-primary" type="submit" value="register">
                        </p>
                       

                    }
                </div>
            </div>

            <div class="col-md-6 col-xs-12">
                <div class="tb-login-form res">
                    <a href="/Account/Login">

                        <h5 class="tb-title">Login if you have account</h5>
                    </a>
                    <p>Hello, Welcome your to account</p>


                    <div class="tb-info-login ">
                        <h5 class="tb-title4">SignUp today and you'll be able to:</h5>
                        <ul>
                            <li>Speed your way through the checkout.</li>
                            <li>Track your orders easily.</li>
                            <li>Keep a record of all your purchases.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
