@model IEnumerable<StoreIdent.ViewModels.WishListViewModel>

@{
    ViewBag.Title = "Wishlist";
}



<section class="contact-img-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="con-text">
                    <h2 class="page-title">Wishlist</h2>
                    <p><a href="/Scase/Main">Home</a> | Wishlist</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- pages-title-end -->
<!-- wishlist content section start -->
<div id="wishlist">
    <div class="shopping-cart-area nr-wish-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="s-cart-all">
                        <div class="cart-form table-responsive">
                            <table id="shopping-cart-table" class="data-table cart-table">
                                <tr>

                                    <th>Images</th>
                                    <th class="low2">Product Name</th>
                                    <th>Unit Price </th>
                                    <th>Info</th>

                                    <th class="low1"></th>
                                </tr>
                                @foreach (var item in Model)
                                {

                                    <tr>

                                        <td class="sop-cart">
                                            <a href='@Url.Action("CreateOrderOne", "Scase" , new { id = item.ClotheID })'> <img style="width:85px; height:125px;" src=@Html.Raw("\"data:image/jpeg;base64," + Convert.ToBase64String(item.Image) + "\" ") /></a>
                                        </td>
                                        <td class="sop-cart an-sh">
                                            <div class="tb-beg">
                                                <a href='@Url.Action("CreateOrderOne", "Scase" , new { id = item.ClotheID })'>@item.Name</a>
                                            </div>

                                        </td>
                                        <td class="sop-cart">
                                            <div class="tb-product-price font-noraure-3">
                                                <span class="amount">@item.Price$</span>
                                            </div>
                                        </td>
                                        <td class="cen">
                                            <span class="wishlist-in-stock">@item.Info</span>
                                        </td>

                                        <td class="sop-icon1">
                                            <button class="mobile-button" id="del" value="@item.Id">
                                                <span> <i class="fa fa-times"></i></span>

                                            </button>

                                        </td>
                                    </tr>

                                }

                                <tfoot>
                                    <tr>
                                        <td colspan="6">
                                            <div class="yith-wcwl-share">
                                                <div class="as">
                                                    <h4 class="yith-wcwl-share-title">Share on:</h4>
                                                </div>
                                                <ul>
                                                    <li><a href="#"><img src="img/icon-img/facebook.png" alt=""></a></li>
                                                    <li><a href="#"><img src="img/icon-img/twitter.png" alt=""></a></li>
                                                    <li><a href="#"><img src="img/icon-img/pinterest.jpg" alt=""></a></li>
                                                    <li><a href="#"><img src="img/icon-img/googleplus.jpg" alt=""></a></li>
                                                    <li><a href="#"><img src="img/icon-img/email.jpg" alt=""></a></li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_Brands")
@Html.Partial("_Info")
<script type="text/javascript">

    $("button").click(function () {

        $.get("/Scase/DeleteWishList", { id: $(this).val() });
        $("#wishlist").load(window.location.href + " #wishlist");
    });

</script>