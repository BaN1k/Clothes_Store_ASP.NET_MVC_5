<!-- checkout content section start -->
<div class="checkout-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="coupon-accordion res">
                    <h3>Have a coupon? <span id="showcoupon">Click here to enter your code</span></h3>
                    <div id="checkout_coupon" class="coupon-checkout-content tnm">
                        <div class="coupon-info">
                            <form action="#">
                                <p class="checkout-coupon res">
                                    <input type="text" placeholder="Coupon code" />
                                    <input type="submit" value="Apply Coupon" />
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7 col-sm-12">
                <div class="text">
                    <!-- Nav tabs -->

                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="home">
                            <div class="row">
                                @using (Html.BeginForm("CheckOut", "Scase"))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="checkbox-form">
                                        <div class="col-md-12">
                                            <h3 class="checkbox9">SHIPPING ADDRESS DETAILS</h3>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    First Name
                                                    <em>*</em>
                                                </label>
                                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    Last Name
                                                    <em>*</em>
                                                </label>
                                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    Email Address
                                                    <em>*</em>
                                                </label>
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    Phone
                                                    <em>*</em>
                                                </label>
                                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="country-select">
                                                <label class="l-contact">
                                                    Country
                                                    <em>*</em>
                                                </label>
                                                @*<select class="email s-email s-wid">
                                                        <option>Bangladesh</option>
                                                        <option>Albania</option>
                                                        <option>Åland Islands</option>
                                                        <option>Afghanistan</option>
                                                        <option>Belgium</option>
                                                    </select>*@
                                                @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <label class="l-contact">
                                                Town / City
                                                <em>*</em>
                                            </label>
                                            <div class="di-na bs">
                                                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    Address
                                                    <em>*</em>
                                                </label>
                                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    Postcode / ZIP
                                                    <em>*</em>
                                                </label>
                                                @Html.TextBoxFor(m => m.PostCode, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.PostCode, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    Type Buy
                                                    <em>*</em>
                                                </label>

                                                @Html.DropDownListFor(model => model.TypeBuyID, ViewBag.TypeBuy as SelectList, new { @class = "email s-email s-wid" })
                                                @Html.ValidationMessageFor(model => model.TypeBuyID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    Order Notes
                                                </label>

                                                @Html.TextAreaFor(m => m.Notes, new { @class = "input-text", @placeholder = "Notes about your order, e.g. special notes for delivery." })
                                                @Html.ValidationMessageFor(m => m.Notes, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-12 text-center">
                                            <p class="checkout-coupon">
                                                <input type="submit" value="CONTINUE">
                                            </p>
                                        </div>
                                    </div>

                                }
                            </div>
                            <div class="row">

                                <div id="checkout_coupon2" class="coupon-checkout-content2">
                                    <div class="checkbox-form">
                                        <div class="col-md-6">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    First Name
                                                    <em>*</em>
                                                </label>
                                                <input class="form-control" type="text" required="" name="name">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    Last Name
                                                    <em>*</em>
                                                </label>
                                                <input class="form-control" type="text" required="" name="name">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    Company Name
                                                    <em>*</em>
                                                </label>
                                                <input class="form-control" type="text" required="" name="name">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    Email Address
                                                    <em>*</em>
                                                </label>
                                                <input class="form-control" type="email" required="" name="name">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    Phone
                                                    <em>*</em>
                                                </label>
                                                <input class="form-control" type="tel" required="" name="name">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="country-select">
                                                <label class="l-contact">
                                                    Country
                                                    <em>*</em>
                                                </label>
                                                <select class="email s-email s-wid">
                                                    <option>Bangladesh</option>
                                                    <option>Albania</option>
                                                    <option>Åland Islands</option>
                                                    <option>Afghanistan</option>
                                                    <option>Belgium</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <label class="l-contact">
                                                Address
                                                <em>*</em>
                                            </label>
                                            <div class="di-na bs">
                                                <input class="form-control" type="text" required="" name="name" placeholder="Street address">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="di-na bs tana">
                                                <input class="form-control" type="text" required="" name="name" placeholder="Apartment, suite, unit etc. (optional)">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <label class="l-contact">
                                                Town / City
                                                <em>*</em>
                                            </label>
                                            <div class="di-na bs">
                                                <input class="form-control" type="text" required="" name="name">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="country-select">
                                                <label class="l-contact">
                                                    District
                                                    <em>*</em>
                                                </label>
                                                <select class="email s-email s-wid">
                                                    <option>mymensingh</option>
                                                    <option>dhaka</option>
                                                    <option>khulna</option>
                                                    <option>kumillah</option>
                                                    <option>chadpur</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="di-na bs">
                                                <label class="l-contact">
                                                    Postcode / ZIP
                                                    <em>*</em>
                                                </label>
                                                <input class="form-control" type="text" required="" name="name">
                                            </div>
                                        </div>
                                    </div>
                                </div>



                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="profile">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="top-check-text">
                                        <div class="check-down">
                                            <h3 class="checkbox9">INFORMATION</h3>
                                            <span><a class="ro-edit-customer-info" href="#">Edit</a></span>
                                        </div>
                                        <div class="ro-content2">
                                            <div class="ro-info2">
                                                <p>
                                                    <span>Email Address: </span>
                                                    tasnimakter903@yahoo.com
                                                </p>
                                            </div>
                                            <div class="ro-info2">
                                                <p>
                                                    <span>Country: </span>
                                                    BD
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-5 col-sm-12">
                <div class="ro-checkout-summary">
                    <div class="ro-title">
                        <h3 class="checkbox9">ORDER SUMMARY</h3>
                    </div>
                    @foreach (var item in ViewBag.CartViewModel)
                    {
                        <div class="ro-body">
                            <div class="ro-item">
                                <div class="ro-image">
                                    <a href="#">
                                        <img src=@Html.Raw("\"data:image/jpeg;base64," + Convert.ToBase64String(@item.Image) + "\" ") alt="">
                                    </a>
                                </div>
                                <div>
                                    <div class="tb-beg">
                                        <a href='@Url.Action("CreateOrderOne", "Scase", new { id = item.ClotheID })'>@item.Name</a>
                                    </div>
                                </div>
                                <div>
                                    <div class="ro-price">
                                        <span class="amount">@item.Price$</span>
                                    </div>
                                    <div class="ro-quantity">
                                        <strong class="product-quantity">× @item.Amount</strong>
                                    </div>
                                    <div class="product-total">
                                        <span class="amount">@ViewBag.TotalSum$</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="ro-footer">
                        <div>
                            <p>
                                Subtotal
                                <span>
                                    <span class="amount">@ViewBag.TotalSum$</span>
                                </span>
                            </p>
                            <div class="ro-divide"></div>
                        </div>
                        <div class="shipping">
                            <p> Shipping </p>
                            <div class="ro-shipping-method">
                                <p>
                                    Shipping Local Pickup (Free)
                                </p>
                            </div>
                            <div class="clearfix"></div>
                            <div class="ro-divide"></div>
                        </div>
                        <div class="order-total">
                            <p>
                                Total
                                <span>
                                    <strong>
                                        <span class="amount">@ViewBag.TotalSum$</span>
                                    </strong>
                                </span>
                            </p>
                        </div>
                        <div>
                            <p>
                                Payment Due
                                <span>
                                    <strong>
                                        <span class="amount">@ViewBag.TotalSum$</span>
                                    </strong>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
